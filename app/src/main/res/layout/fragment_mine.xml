<?xml version="1.0" encoding="utf-8"?>

<in.srain.cube.views.ptr.PtrFrameLayout
    android:id="@+id/store_house_ptr_frame"
    android:background="#333333"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cube_ptr:ptr_duration_to_close="300"
    cube_ptr:ptr_duration_to_close_header="1000"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_pull_to_fresh="false"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
    cube_ptr:ptr_resistance="1.7">
<ScrollView
    android:id="@+id/scrollView"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_account"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="112dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_head"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:src="@drawable/default_head"
                app:riv_corner_radius="36dip"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/white"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                android:layout_height="72dp"
                android:layout_width="72dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_nick"
                    android:textColor="@color/white"
                    android:text="立即登陆"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_signature"
                        android:text="登陆后可享受更多特权"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:src="@drawable/qr_code"
                android:layout_marginLeft="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <ImageView
                android:src="@drawable/arrow_right_whtie"
                android:layout_marginLeft="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </LinearLayout>
        <include layout="@layout/divider"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="88dp">
         <FrameLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:id="@+id/ll_balance"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:background="@drawable/selector_balance_circle"
                 android:orientation="vertical"
                 android:layout_width="72dp"
                 android:layout_height="72dp">
                 <TextView
                     android:text="余额"
                     android:textColor="@color/white"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
                 <TextView
                     android:text="00.00"
                     android:textColor="@color/white"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
         </FrameLayout>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_rent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/selector_rent_circle"
                    android:orientation="vertical"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <TextView
                        android:text="租金"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="00.00"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_deposit"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/selector_deposit_circle"
                    android:orientation="vertical"
                    android:layout_width="72dp"
                    android:layout_height="72dp">
                    <TextView
                        android:text="押金"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="00.00"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <include layout="@layout/divider"/>
        <RelativeLayout
            android:id="@+id/bill"
            android:background="@drawable/selector_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/bill"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:text="我的账单"
                android:textSize="16sp"
                android:textColor="@color/text"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/item_line"/>
        <RelativeLayout
            android:id="@+id/mine_circle"
            android:background="@drawable/selector_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/f2_a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:text="我的蜗圈"
                android:textSize="16sp"
                android:textColor="@color/text"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/item_line"/>
        <RelativeLayout
            android:id="@+id/mine_building"
            android:background="@drawable/selector_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/manager"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:text="我的小楼"
                android:textSize="16sp"
                android:textColor="@color/text"/>
        </RelativeLayout>

        <View
            android:background="@color/bg_grey"
            android:layout_width="match_parent"
            android:layout_height="16dp"/>
        <RelativeLayout
            android:id="@+id/setting"
            android:background="@drawable/selector_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/settings"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:text="设置"
                android:textSize="16sp"
                android:textColor="@color/text"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="@color/item_line"/>
        <RelativeLayout
            android:id="@+id/about"
            android:background="@drawable/selector_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/about"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:text="关于蜗信"
                android:textSize="16sp"
                android:textColor="@color/text"/>
        </RelativeLayout>
        <include layout="@layout/divider"/>
        <TextView
            android:gravity="center"
            android:textColor="@color/text_low"
            android:text="版权归窝信所有"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>
</ScrollView>
</in.srain.cube.views.ptr.PtrFrameLayout>
