<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/bg_grey"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.zhuliyi.woju.widget.editText.EditTextWithDel
        android:id="@+id/et_account"
        android:layout_marginTop="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textSize="16sp"
        android:hint="手机号/用户名"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.zhuliyi.woju.widget.editText.EditTextWithDel
            android:id="@+id/et_pwd"
            android:background="@null"
            android:hint="密码"
            android:textSize="16sp"
            android:textColor="@color/text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/img_eye"
            android:src="@drawable/et_pwd_invisible"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/selector_green_round"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <TextView
        android:id="@+id/text_forget"
        android:text="忘记密码"
        android:textColor="@color/selector_font_color"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/divider"
                android:layout_width="100dp"
                android:layout_height="0.5dp"/>
            <TextView
                android:text="第三方登陆"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@color/text_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider"
                android:layout_width="100dp"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="64dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/login_wechat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:text="微信"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_low"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/login_qq"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:text="QQ"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_low"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/login_weibo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:text="微博"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_low"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>